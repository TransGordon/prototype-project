<% title "Scan Management" %>

<style>
.row-fluid .offset2{margin-left:17.5812%;*margin-left:19.55174%}
</style>

<div id="scans">
    <div class="page-header">
        <h1>Scan Management</h1>

        <div class="lead">
            Start, manage and view your scans.
        </div>
    </div>

    <p>
        <%= link_to new_scan_path, class: 'btn btn-primary' do %>
            <i class="icon-plus"></i> New Scan
        <% end %>
    </p>

    <div id="revision-form-modal" class="modal hide fade"
         tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
    </div>

    <div id="tables"
         data-refresh-url="<%= scans_path( format: :js, params: params ) %>"
         data-refresh-rate="<%= HardSettings.scan_refresh_rate %>"
         data-refresh-type='js'
    >
        <%= render 'tables' %>
    </div>

</div>
